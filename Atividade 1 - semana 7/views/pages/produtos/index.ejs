<%- contentFor('body') %>

<header class="header-lojinha text-light text-center py-5">
    <h1 class="display-4">Bem-vindo a minha lojinha!</h1>
    <p class="lead">Obras de arte fofas de conquistar muitos corações.</p>
</header>


<main class="container">
    <div class="row">
        <% produtos.forEach(produto => { %>
            <div class="col-md-4 mb-4">
                <div class="card shadow-sm">
                    <img height="400px" src="<%= produto.foto || '/static/uploads/default.jpg' %>" class="card-img-top" alt="<%= produto.nome %>">
                    <div class="card-body">
                        <h5 class="card-title"><%= produto.nome %></h5>
                        <p class="card-text"><%= produto.descricao %></p>
                        <p class="card-text">R$<%= produto.preco.toFixed(2) %></p>
                        <a href="#" class="btn btn-custom">Adicionar ao Carrinho</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>
</main>

<footer class="text-white text-center py-4">
    <div class="container">
        <p class="mb-1">&copy; 2024 Minha Loja. Todos os direitos reservados.</p>
        <p class="mb-2">Desenvolvido por Lalazul</p>
    </div>
</footer>

